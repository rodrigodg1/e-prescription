    "chai-bytes": "^0.1.2",
    "core-js": "^3.1.4",
    "cross-env": "^5.1.3",
    "eslint": "^6.0.1",
    "eslint-config-digitalbazaar": "^2.0.0",
    "karma": "^4.1.0",
